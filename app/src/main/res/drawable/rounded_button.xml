<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Saat tombol ditekan -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#000000" />  <!-- Warna hitam saat ditekan -->
            <corners android:radius="12dp" />  <!-- Sudut membulat -->
            <stroke
                android:width="2dp"
                android:color="#000000" />  <!-- Garis tepi putih -->
        </shape>
    </item>

    <!-- Warna default tombol -->
    <item>
        <shape>
            <solid android:color="#000000" />  <!-- Warna hitam default -->
            <corners android:radius="12dp" />  <!-- Sudut membulat -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />  <!-- Garis tepi putih -->
        </shape>
    </item>
</selector>
